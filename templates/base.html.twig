<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
       
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
        <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
    </head>
    <body>  
    

      

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
          <div class="container-fluid">
            <a class="navbar-brand" href="#">{{'MetaUnivers'|trans}}</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
              <ul class="navbar-nav me-auto">
                <li class="nav-item">
                  <a class="nav-link active" href="{{path('annonces.list')}}">{{'Annonces'|trans}}

                    <span class="visually-hidden"></span>
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link active" href="{{path('app_search')}}">{{'Recherche avancée'|trans}} </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{path('annonces.create')}}">{{'Publier un article'|trans}}</a>
                </li>
                <li class="nav-item">
                 {% if app.user %}
                 
                  <a class="nav-link" href="{{path('app_logout')}}">{{'DéConnexion'|trans}}</a>
                {% else %}
                <a class="nav-link" href="{{path('app_login')}}">{{'Connexion'|trans}}</a>
                {% endif %}
                </li>
                {% if app.user is null %}
                 <li class="nav-item">
                  <a class="nav-link" href="{{path('app_register')}}">{{'Inscription'|trans}}</a>
                {% else %}
                <a class="nav-link" href="{{path('commentaire.list')}}">{{'Mes commentaires'|trans}}</a>
                 </li>
                 {% endif %}
                <li class="nav-item">
                  <a class="nav-link" href="{{path('crypto.list')}}">{{'Liste des cryptos'|trans}}</a>
                </li>
                 <li class="nav-item">
                  <a class="nav-link" href="{{path('admin')}}">{{'Administration'|trans}}</a>
                 </div>
               </li>
 
              </ul>
              <ul class="navbar-nav me-auto">
                {% for locale in locales %} 
                {% if locale != app.request.locale  %}
                 <li class="nav-item">
                  <a class="nav-link active" href="{{ path('change_locale',{'locale': locale}) }} "><img src="{{ asset('img/'~locale~'.png') }}" alt="{{locale}}">{{locale}}
                   </a>
                </li>
                {% endif %}
                {% endfor %}
               
              </ul>
             
            </div>
          </div>
        </nav>


  <div class="container">
      {% block body %}{% endblock %}
  </div>
    </body>
</html>
